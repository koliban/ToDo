<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@mipmap/tomabg">
    <!--android:background="#FAF0E6"-->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:gravity="center"
        android:textColor="#ffffff"
        android:typeface="sans"
        android:text="番茄钟" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="#eeDCDCDC" />
    <com.example.chenhaonan.todo.CountDownProgress
        android:id="@+id/countDownProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:padding="20dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="280dp"
        android:textSize="40dp"
        android:text="25:00" />

    <Button
        android:id="@+id/start"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="191dp"
        android:background="@drawable/tombut"
        android:onClick="startTiming"
        android:text="开始专注"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="121dp"
        android:background="#00000000"
        android:text="放弃"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/aaa"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/countDownProgress"
        android:layout_marginBottom="62dp"
        android:text="您现有的番茄数：" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/aaa"
        android:layout_centerHorizontal="true"
         />

    <Button
        android:id="@+id/clear"
        android:layout_width="83dp"
        android:layout_height="38dp"

        android:layout_alignTop="@+id/aaa"
        android:layout_marginTop="-8dp"
        android:layout_toEndOf="@+id/time"
        android:background="@drawable/tombut"
        android:text="清空"
        android:textColor="#ffffff" />


</RelativeLayout>